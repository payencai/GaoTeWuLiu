<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout

        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:id="@+id/fr_container"
        android:layout_above="@id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_tab_pinhuo"
            android:padding="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_tab_pinhuo"
                android:layout_marginTop="3dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/pinhuo_selected"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_tab_pinhuo"
                android:textColor="@color/color_333"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:text="拼货"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_tab_wuliu"
            android:padding="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_marginTop="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="32dp"
                android:layout_height="24dp">
                <ImageView
                    android:layout_centerInParent="true"
                    android:id="@+id/iv_tab_wuliu"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/logistics_unselected"
                    />

            </RelativeLayout>

            <TextView
                android:textColor="@color/color_999"
                android:id="@+id/tv_tab_wuliu"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:text="物流"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>





        <LinearLayout
            android:id="@+id/ll_tab_mine"
            android:padding="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_tab_mine"
                android:layout_marginTop="3dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/mine_unselected"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv_tab_mine"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:text="我的"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>