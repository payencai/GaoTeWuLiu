<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divider_gray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:padding="15dp"
            android:src="@drawable/back"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:textSize="16sp"
            android:textColor="@color/text_black_color"
            android:text="个人资料"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/color_333"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textSize="@dimen/text_size_15sp" />

        <FrameLayout
            android:id="@+id/imgEnter"
            android:layout_width="@dimen/length_view_25dp"
            android:layout_height="@dimen/title_bar"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="10dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/margin_10dp"
                android:scaleType="fitXY"
                android:src="@drawable/arrowright" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imgPerson"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_toLeftOf="@id/imgEnter"
            android:src="@drawable/defaulthead" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_view_50dp"
        android:layout_marginTop="@dimen/margin_2dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_10dp">

        <TextView
            android:textColor="@color/color_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="昵称"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/tvNickName"
            android:textColor="@color/color_999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/margin_25dp"
            android:text="给个槌子"
            android:textSize="@dimen/text_size_15sp" />

        <FrameLayout
            android:id="@+id/imgNickNameEnter"
            android:layout_width="@dimen/length_view_25dp"
            android:layout_height="@dimen/title_bar"
            android:layout_gravity="right|center_vertical">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="10dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/margin_10dp"
                android:scaleType="fitXY"
                android:src="@drawable/arrowright" />
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_view_50dp"
        android:layout_marginTop="@dimen/margin_2dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_10dp">

        <TextView
            android:textColor="@color/color_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="手机号"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/tvPhone"
            android:textColor="@color/color_999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/margin_10dp"
            android:text="13800000000"
            android:textSize="@dimen/text_size_15sp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/sexLayoutFramen"
        android:layout_width="match_parent"
        android:layout_height="@dimen/length_view_50dp"
        android:layout_marginTop="@dimen/margin_2dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_10dp">

        <TextView
            android:textColor="@color/color_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="性别"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/tvGender"
            android:textColor="@color/color_999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/margin_25dp"
            android:text="男"
            android:textSize="@dimen/text_size_15sp" />

        <FrameLayout
            android:id="@+id/imgGenderEnter"
            android:layout_width="@dimen/length_view_25dp"
            android:layout_height="@dimen/title_bar"
            android:layout_gravity="right|center_vertical">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="10dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/margin_10dp"
                android:scaleType="fitXY"
                android:src="@drawable/arrowright" />
        </FrameLayout>
    </FrameLayout>

</LinearLayout>