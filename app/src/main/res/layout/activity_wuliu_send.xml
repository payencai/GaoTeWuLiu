<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.client.wuliu.WuliuSendActivity">
    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rl_top"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back"
            android:padding="15dp"
            android:src="@drawable/back"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="@color/text_black_color"
            android:text="我要寄件"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_search"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:textSize="16sp"
            android:textColor="#1975FA"
            android:text="网点查询"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="#f3f3f3"
        app:layout_constraintTop_toBottomOf="@id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </View>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:background="#e5e5e5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_company"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <LinearLayout
                    android:gravity="center"
                    android:layout_toLeftOf="@id/iv_item1"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                   <TextView
                       style="@style/TextStyle333"
                       android:text="快递公司"
                       />
                    <TextView

                        android:layout_marginLeft="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/color_999"
                        android:text="请选择快递公司"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_item1"
                    android:layout_marginRight="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/gt_black_back"
                    android:layout_width="10dp"
                    android:layout_height="12dp" />
            </RelativeLayout>
            <View
                android:background="#f3f3f3"
                app:layout_constraintTop_toBottomOf="@id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="1dp">

            </View>
            <include layout="@layout/part_wuliu_send"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <include
                layout="@layout/part_wuliu_get"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <include
                layout="@layout/part_goods_params"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <RelativeLayout
                android:id="@+id/rl_coupon"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="优惠券"
                    android:textColor="@color/text_black_color"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_marginRight="15dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:textSize="14sp"
                        android:textColor="#666"
                        android:text="暂无优惠卷"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_width="7dp"
                        android:layout_height="13dp"
                        android:src="@mipmap/gt_black_back" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:background="#e5e5e5"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <LinearLayout

                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="￥"
                        android:textColor="@color/text_black_color"
                        android:textSize="14sp" />
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:text="0"
                        android:textColor="@color/text_black_color"
                        android:textSize="20sp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_detail"
                    android:background="@drawable/shape_blue_price"
                    android:gravity="center"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:textStyle="bold"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:text="价格明细"
                    android:textColor="#00C1DE"
                    android:textSize="10sp" />
            </RelativeLayout>
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/btn_submit"
                    android:textSize="@dimen/text_size_17sp"
                    android:textColor="@color/white"
                    android:text="确定发布"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_btn_blue5"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
            </LinearLayout>
            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:background="@color/white"
                android:layout_gravity="center_horizontal"
                style="@style/TextStyle333"
                android:textColor="@color/color_999"
                android:text="发布成功后网点人员将上门取件"
                android:textSize="14sp"
                android:layout_width="match_parent"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>