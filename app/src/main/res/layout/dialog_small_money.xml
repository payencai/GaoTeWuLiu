<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/tv_cancel"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="取消"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                android:layout_centerInParent="true"
                android:text="加小费"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_confirm"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:text="确定"
                android:textColor="@color/btn_color_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
       
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_money1"
            android:layout_marginLeft="15dp"
            android:textSize="17sp"
            android:textColor="#00C1DE"
            android:gravity="center"
            android:text="￥10"
            android:background="@drawable/shape_blue_price"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="38dp" />
        <TextView
            android:id="@+id/tv_money2"
            android:layout_marginLeft="30dp"
            android:textSize="17sp"
            android:textColor="#333"
            android:gravity="center"
            android:text="￥20"
            android:background="@drawable/shape_grey_price"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="38dp" />
        <TextView
            android:id="@+id/tv_money3"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="30dp"
            android:textSize="17sp"
            android:textColor="#333"
            android:gravity="center"
            android:text="￥30"
            android:background="@drawable/shape_grey_price"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="38dp" />
    </LinearLayout>
    <EditText
        android:id="@+id/et_money"
        android:textColor="@color/color_333"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:textColorHint="#ccc"
        android:textSize="12sp"
        android:hint="请在这里输入金额，最高200元"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/shape_grey_price"
        android:layout_width="match_parent"
        android:layout_height="38dp" />
</LinearLayout>