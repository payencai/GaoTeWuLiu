<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="弥勒城乡物流信息服务平台"
        android:textColor="#333333"
        android:textSize="16sp" />
    <View
        android:background="#f3f3f3"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <ImageView
            android:padding="15dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_msg"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:layout_centerInParent="true"
            android:textColor="@color/color_333"
            android:id="@+id/titlebar_tv_title"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:textSize="14sp"
            android:text="我要拼货" />




        <LinearLayout
            android:gravity="center_vertical"
            android:id="@+id/titlebar_ll_loc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/titlebar_tv_right"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"
                android:ellipsize="end"
                android:text="昆明"
                android:textColor="#333333"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="7dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrowdown" />


        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="#f3f3f3"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/tab_car"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/white"
                app:tl_indicator_width="50dp"
                app:tl_tab_space_equal="false"
                app:tl_indicator_color="@color/text_black_color"
                app:tl_textBold="SELECT"
                app:tl_textSelectColor="@color/text_black_color"
                app:tl_textUnselectColor="@color/tab_text_unselected"
                app:tl_textsize="15dp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_car"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                 />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_common_height"
                android:background="@color/divider_gray" />


            <LinearLayout
                android:id="@+id/ll_send"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/lcl_colorbrand1"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:src="@drawable/greenround" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lcl_detail_tv_mail_name_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="寄件人    手机号"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lcl_detail_tv_mail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:ellipsize="middle"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:maxLines="3"
                        android:text="寄件地址"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/lcl_whitearrow" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_get"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                android:background="@drawable/lcl_colorbrand2"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:src="@drawable/purpleround" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lcl_detail_tv_pick_name_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="收件人    手机号"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/lcl_detail_tv_pick_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="10dp"
                        android:ellipsize="middle"
                        android:gravity="center_vertical"
                        android:lines="2"
                        android:maxLines="3"
                        android:text="收件地址"
                        android:textColor="@color/white"
                        android:textSize="14sp" />


                </LinearLayout>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/lcl_whitearrow" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_common_height"
                android:background="@color/divider_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp">

                <ImageView
                    android:id="@+id/icon_weight"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/weight" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/icon_weight"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/lcl_detail_et_cargo_weight"
                            android:layout_width="64dp"
                            android:layout_height="23dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/shape_et_lcl"
                            android:gravity="center"
                            android:hint="请输入重量"
                            android:inputType="numberDecimal"
                            android:padding="2dp"
                            android:singleLine="true"
                            android:textColor="@color/text_black_color"
                            android:textColorHint="#999999"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="kg"
                            android:textColor="@color/text_black_color"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/lcl_detail_et_cargo_volume"
                            android:layout_width="64dp"
                            android:layout_height="23dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/shape_et_lcl"
                            android:gravity="center"
                            android:hint="请输入体积"
                            android:inputType="numberDecimal"
                            android:padding="2dp"
                            android:singleLine="true"
                            android:textColor="@color/text_black_color"
                            android:textColorHint="#999999"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="m³"
                            android:textColor="@color/text_black_color"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/lcl_detail_et_cargo_count"
                            android:layout_width="64dp"
                            android:layout_height="23dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/shape_et_lcl"
                            android:gravity="center"
                            android:hint="请输入件数"
                            android:inputType="numberDecimal"
                            android:padding="2dp"
                            android:singleLine="true"
                            android:textColor="@color/text_black_color"
                            android:textColorHint="#999999"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="件"
                            android:textColor="@color/text_black_color"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp">

                <ImageView
                    android:id="@+id/icon_productname"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/productname" />

                <EditText
                    android:id="@+id/lcl_detail_et_cargo_name"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="46dp"
                    android:layout_toRightOf="@id/icon_productname"
                    android:background="@drawable/shape_et_lcl"
                    android:hint="请输入货品名称"
                    android:paddingLeft="7dp"
                    android:textColorHint="#999999"
                    android:textSize="10sp" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_common_height"
                android:background="@color/divider_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp">

                <ImageView
                    android:id="@+id/icon_man"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/man" />

                <TextView
                    android:id="@+id/get_product_tv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/icon_man"
                    android:text="取货地点"
                    android:textColor="@color/text_black_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/lcl_detail_et_get_cargo_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="46dp"
                    android:layout_toRightOf="@id/get_product_tv_tag"
                    android:background="@null"
                    android:hint="请输入取货地点"
                    android:textColor="@color/text_black_color"
                    android:textColorHint="#999999"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_gray" />

            <LinearLayout
                android:id="@+id/get_product_time_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/time" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/icon_man"
                    android:text="取货时间"
                    android:textColor="@color/text_black_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/lcl_detail_tv_get_cargo_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="11dp"
                    android:singleLine="true"
                    android:text="请选择时间"
                    android:textColor="#999999"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="right|center_vertical">


                    <ImageView
                        android:layout_width="5dp"
                        android:layout_height="9dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="9dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/arrowright" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_common_height"
                android:background="@color/divider_gray" />

            <EditText
                android:id="@+id/lcl_detail_et_extra_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请留言给拼货司机"
                android:paddingLeft="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/text_black_color"
                android:textColorHint="#999999"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_common_height"
                android:background="@color/divider_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:text="优惠券"
                        android:textColor="@color/text_black_color"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_marginRight="15dp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="14sp"
                            android:textColor="#666"
                            android:text="暂无优惠卷"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_marginLeft="10dp"
                            android:layout_width="7dp"
                            android:layout_height="13dp"
                            android:src="@drawable/mine_arrowright" />
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:background="#f3f3f3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <LinearLayout

                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="16dp"
                            android:text="￥"
                            android:textColor="@color/text_black_color"
                            android:textSize="14sp" />
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="2dp"
                            android:text="0"
                            android:textColor="@color/text_black_color"
                            android:textSize="20sp" />
                    </LinearLayout>
                    <TextView
                        android:background="@drawable/shape_blue_price"
                        android:gravity="center"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:text="价格明细"
                        android:textColor="#00C1DE"
                        android:textSize="10sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/lcl_detail_cb_agree"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:button="@null"
                    android:checked="true"
                    android:drawableStart="@drawable/selector_check_box_lcl" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="我已阅读并同意"
                    android:textColor="#666666"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="《服务协议》"
                    android:textColor="#00c1de"
                    android:textSize="12sp" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/btn_color_blue"
                android:gravity="center"
                android:text="发布需求"
                android:textColor="@color/white"

                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>