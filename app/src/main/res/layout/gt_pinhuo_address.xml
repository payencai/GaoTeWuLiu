<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"

    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/rl_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_send"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/greenround" />

            <LinearLayout
                android:layout_toLeftOf="@id/iv_right_send"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@id/iv_send"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/lcl_detail_tv_mail_name_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="寄件人    手机号"
                    android:textColor="@color/color_333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/lcl_detail_tv_mail_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="middle"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="寄件地址"
                    android:textColor="@color/color_333"
                    android:textSize="14sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_right_send"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:src="@mipmap/gt_black_back" />


        </RelativeLayout>
        <View
            android:layout_margin="10dp"
            android:background="#d8d8d8"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>
        <RelativeLayout
            android:padding="10dp"
            android:id="@+id/rl_get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_get"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/purpleround" />

            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/iv_right_get"
                android:layout_toRightOf="@id/iv_get"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="收件人    手机号"
                    android:textColor="@color/color_333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_get_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:ellipsize="middle"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="收件地址"
                    android:textColor="@color/color_333"
                    android:textSize="14sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_right_get"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="10dp"
                android:layout_height="16dp"
                android:src="@mipmap/gt_black_back" />


        </RelativeLayout>
        <View
            android:layout_margin="10dp"
            android:background="#d8d8d8"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"></View>
        <Button
            android:layout_marginBottom="15dp"
            android:id="@+id/btn_submit"
            android:textSize="@dimen/text_size_17sp"
            android:textColor="@color/white"
            android:text="我要拼货"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_btn_blue"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>