<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp">

            <ImageView
                android:id="@+id/icon_weight"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/weight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/icon_weight"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/lcl_detail_et_cargo_weight"
                        android:layout_width="64dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/shape_et_lcl"
                        android:gravity="center"
                        android:hint="请输入重量"
                        android:inputType="numberDecimal"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@color/text_black_color"
                        android:textColorHint="#999999"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="kg"
                        android:textColor="@color/text_black_color"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/lcl_detail_et_cargo_volume"
                        android:layout_width="64dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/shape_et_lcl"
                        android:gravity="center"
                        android:hint="请输入体积"
                        android:inputType="numberDecimal"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@color/text_black_color"
                        android:textColorHint="#999999"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="m³"
                        android:textColor="@color/text_black_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/lcl_detail_et_cargo_count"
                        android:layout_width="64dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/shape_et_lcl"
                        android:gravity="center"
                        android:hint="请输入件数"
                        android:inputType="numberDecimal"
                        android:padding="2dp"
                        android:singleLine="true"
                        android:textColor="@color/text_black_color"
                        android:textColorHint="#999999"
                        android:textSize="10sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:text="件"
                        android:textColor="@color/text_black_color"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp">

            <ImageView
                android:id="@+id/icon_productname"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@drawable/productname" />

            <EditText
                android:id="@+id/lcl_detail_et_cargo_name"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="46dp"
                android:layout_toRightOf="@id/icon_productname"
                android:background="@drawable/shape_et_lcl"
                android:hint="请输入货品名称"
                android:paddingLeft="7dp"
                android:textColorHint="#999999"
                android:textSize="10sp" />

        </RelativeLayout>



    </LinearLayout>
</LinearLayout>